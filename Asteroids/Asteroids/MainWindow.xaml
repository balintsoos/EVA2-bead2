<Window x:Class="Asteroids.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asteroids"
        mc:Ignorable="d"
        Title="Asteroids" Height="350" Width="525">
    <Window.InputBindings>
        <KeyBinding Key="Left" Command="{Binding TurnCommand}" CommandParameter="left" />
        <KeyBinding Key="Right" Command="{Binding TurnCommand}" CommandParameter="right" />
    </Window.InputBindings>
    <Grid>
        <Button Name="_NewGameButton" Content="New Game" Command="{Binding NewGameCommand}" />
        <Button Name="_PauseResumeButton" Content="{Binding PauseResumeLabel}" Command="{Binding PauseResumeCommand}" />
        <TextBox x:Name="_GameTime" Height="42" VerticalAlignment="Top" FontSize="28" Text="{Binding TimerLabel, UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" />
    </Grid>
</Window>
