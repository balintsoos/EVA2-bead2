<Window x:Class="Asteroids.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asteroids"
        mc:Ignorable="d"
        Title="Asteroids" Height="350" Width="525">
    <Grid>
        <Button Name="_NewGameButton" Content="New Game" Command="{Binding NewGame}" />
        <Button Name="_PauseResumeButton" Content="{Binding PauseResumeLabel}" Command="{Binding PauseResumeGame}" />
    </Grid>
</Window>
